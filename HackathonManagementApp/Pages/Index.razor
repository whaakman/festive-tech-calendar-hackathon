@page "/"
@using System.Net
<center>

    <h1> ðŸŽ„ Festive Tech Calendar Hackathon Entries</h1>

</center>
<div class="container">
    <div class="center">
         <div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Twitter</th>
                <th>Email</th>
                <th>Repository/Write up</th>
                <th>Score Creativity</th>
                <th>Score Technology</th>
                <th>Score Write up</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var signUp in signUpList)
            {
                // add if submitted is true for reviewer, gray out boxes
                <tr>
                    <td>@signUp.Name</td>
                    <td><a href="https://twitter.com/@signUp.TwitterAccount">@signUp.TwitterAccount</a></td>
                    <td>@signUp.Email</td>
                    <td><a href="@signUp.SolutionUri">@signUp.SolutionUri</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
    </div>
</div>

@code {
   
    List<SignupModel> signUpList =  new List<SignupModel>();
    GetSignUps contributions = new GetSignUps();
    protected override async Task OnInitializedAsync()
    {
        signUpList = await contributions.GetSignUpsFromFunction();
    }
    
}